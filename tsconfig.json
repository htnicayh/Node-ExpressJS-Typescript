{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop" : true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "rootDir": "./",
        "baseUrl": ".",
        "outDir": "dist",
        "incremental": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]            
        },
        "types": ["reflect-metadata", "node"]
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ]
}