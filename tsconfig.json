{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES6"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "compileOnSave": true,
    "include": [
        "src/**/*.ts"
    ]
}